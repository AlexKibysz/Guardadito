@page
@model EditModel

@{
    ViewData["Title"] = "Usuario";
    ViewData["Icon"] = "fas fa-user-edit me-2";
}

<div class="container mt-4">
    <h1 class="mb-4">Editar Usuario</h1>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Usuario.Nombre" class="form-label"></label>
            <input asp-for="Usuario.Nombre" class="form-control" />
            <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Usuario.Email" class="form-label"></label>
            <input asp-for="Usuario.Email" class="form-control" />
            <span asp-validation-for="Usuario.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Usuario.PasswordHash" class="form-label"></label>
            <input asp-for="Usuario.PasswordHash" class="form-control" />
            <span asp-validation-for="Usuario.PasswordHash" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Usuario.RolId" class="form-label"></label>
            <select asp-for="Usuario.RolId" class="form-select" asp-items="ViewBag.RolId"> 
                </select>
s<span asp-validation-for="Usuario.RolId" class="text-danger"></span>
                </div> 
            <button type="submit" class="btn btn-primary">Guardar</button>  
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
