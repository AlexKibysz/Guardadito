@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-4">
    <div class="card border-danger shadow-sm">
        <!-- Header -->
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>Delete User
            </h3>
        </div>
        <!-- Body -->
        <div class="card-body">
            <!-- Warning Message -->
            <div class="alert alert-warning mb-4">
                <h5 class="alert-heading">
                    <i class="fas fa-exclamation-circle me-2"></i>Warning
                </h5>
                <p class="mb-0">You are about to delete this user. This action cannot be undone.</p>
            </div>
            <!-- User Details Section -->
            <div class="user-details p-4 rounded-3">
                <!-- Personal Information -->
                <div class="section mb-4">
                    <h6 class="text-muted border-bottom pb-2 mb-3">
                        <i class="fas fa-user-circle me-2"></i>Personal Information
                    </h6>
                    <dl class="row g-3 mb-0">
                        <dt class="col-sm-3">
                            <i class="fas fa-user me-2 text-secondary"></i>
                            @Html.DisplayNameFor(model => model.Usuario.Nombre)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Usuario.Nombre)
                        </dd>

                        <dt class="col-sm-3">
                            <i class="fas fa-envelope me-2 text-secondary"></i>
                            @Html.DisplayNameFor(model => model.Usuario.Email)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Usuario.Email)
                        </dd>
                    </dl>
                </div>

                <!-- Account Information -->
                <div class="section">
                    <h6 class="text-muted border-bottom pb-2 mb-3">
                        <i class="fas fa-shield-alt me-2"></i>Account Information
                    </h6>
                    <dl class="row g-3 mb-0">
                        <dt class="col-sm-3">
                            <i class="fas fa-user-shield me-2 text-secondary"></i>
                            @Html.DisplayNameFor(model => model.Usuario.Rol)
                        </dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">
                                @Html.DisplayFor(model => model.Usuario.Rol)
                            </span>
                        </dd>

                        @if (Model.Usuario.CreatedAt != null)
                        {
                            <dt class="col-sm-3">
                                <i class="fas fa-calendar-alt me-2 text-secondary"></i>
                                Created At
                            </dt>
                            <dd class="col-sm-9">
                                @Model.Usuario.CreatedAt.ToString("MMM dd, yyyy")
                            </dd>
                        }
                    </dl>
                </div>
            </div>
            <!-- Action Buttons -->
            <div class="d-flex justify-content-end gap-3 mt-4">
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="fas fa-trash me-2"></i>Delete
                </button>
            </div>
        </div>
    </div>

    <!--modal-->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">Are you absolutely sure you want to delete this user? This action is
                        permanent and cannot be reversed.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <form method="post" class="d-inline">
                        <input type="hidden" asp-for="Usuario.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Confirm Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
