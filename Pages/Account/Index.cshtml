@page
@model Guardadito.Pages.Account.IndexModel

@{
    ViewData["Title"] = "Cuentas";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-folder me-2"></i>Cuentas</h4>
            <a asp-page="Create" class="btn btn-light">
                <i class="fas fa-plus me-1"></i>Nueva Cuenta
            </a>
        </div>
        <div class="card-body">
            <table id="categoriasTable" class="table table-striped table-bordered" style="width:100%">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Tipo Cuenta</th>
                        <th>Saldo Actual</th>
                        <th>Saldo Disponible</th>
                        <th>Moneda Principal</th>
                        <th>Nombre Usuario</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cuenta in Model.Cuenta)
                    {
                        <tr>
                            <td>
                                @cuenta.Nombre
                            <td>
                                    @cuenta.TipoCuenta.Name
                            </td>
                            <td>
                                    @cuenta.SaldoActual
                            </td>
                            <td>
                                    @cuenta.SaldoDisponible
                            </td>
                            <td>
                                    @cuenta.MonedaPrincipal.Name
                            </td>
                            <td>
                                    @cuenta.Usuario.Nombre
                            </td>
                            <td class="">
                                <div class="btn-group" role="group">
                                    <a asp-page="./Edit" asp-route-id="@cuenta.Id" class="btn btn-sm" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-page="./Details" asp-route-id="@cuenta.Id" class="btn btn-sm" title="Detalles">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@cuenta.Id" class="btn btn-sm" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    <a asp-page="Transaccion/ByAccount" asp-route-cuentaId="@cuenta.Id" class="btn btn-sm"
                                        title="Historial Transacciones">
                                        <i class="  fas fa-history"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>