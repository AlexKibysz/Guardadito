<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cuenta[0].CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cuenta[0].UpdatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cuenta[0].Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cuenta[0].SaldoActual)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cuenta[0].SaldoDisponible)
        </th>
        <th>
