        <th>
            @Html.DisplayNameFor(model => model.Cuenta[0].Usuario)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Cuenta)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaldoActual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaldoDisponible)
            </td>
