@page
@model Guardadito.Pages.Account.CreateModel

@{
    ViewData["Title"] = "Nueva Cuenta";
}

<div class="container">
    <div class="col-md-8 py-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-wallet me-2"></i>Nueva Cuenta</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Cuenta.Nombre" class="form-label">
                            <i class="fas fa-tag me-1"></i>Nombre
                            <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Cuenta.Nombre" class="form-control" />
                        <span asp-validation-for="Cuenta.Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cuenta.TipoCuentaId" class="form-label">
                            <i class="fas fa-list-alt me-1"></i>Tipo de Cuenta
                            <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Cuenta.TipoCuentaId" class="form-select"
                            asp-items="@(ViewData["TipoCuentaId"] as SelectList)">
                            <option value="">Seleccione el tipo de cuenta</option>
                        </select>
                        <span asp-validation-for="Cuenta.TipoCuentaId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cuenta.SaldoActual" class="form-label">
                            <i class="fas fa-dollar-sign me-1"></i>Saldo Actual
                            <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Cuenta.SaldoActual" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Cuenta.SaldoActual" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cuenta.SaldoDisponible" class="form-label">
                            <i class="fas fa-dollar-sign me-1"></i>Saldo Disponible
                            <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Cuenta.SaldoDisponible" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Cuenta.SaldoDisponible" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cuenta.MonedaPrincipalId" class="form-label">
                            <i class="fas fa-coins me-1"></i>Moneda Principal
                            <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Cuenta.MonedaPrincipalId" class="form-select"
                            asp-items="@(Model.ViewData["MonedaPrincipalId"] as SelectList)">
                            <option value="">Seleccione la moneda</option>
                        </select>
                        <span asp-validation-for="Cuenta.MonedaPrincipalId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cuenta.UsuarioId" class="form-label">
                            <i class="fas fa-user me-1"></i>Usuario
                            <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Cuenta.UsuarioId" class="form-select"
                            asp-items="@(ViewData["UsuarioId"] as SelectList)">
                            <option value="">Seleccione el usuario</option>
                        </select>
                        <span asp-validation-for="Cuenta.UsuarioId" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Volver
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
