<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Guardadito - @ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="icon" type="image" href="favicon.ico">

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/Slate/Styles/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons-1.11.3/font/bootstrap-icons.min.css"></link>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/lib/DataTables/css/datatables.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
        <a class="navbar-brand" asp-page="/Index">
            <i class="fas fa-piggy-bank me-2"></i>Guardadito
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <!-- Dashboard -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">
                        <i class="fas fa-chart-line me-1"></i>Dashboard
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-page="/Stats/Index"><i class="fas fa-chart-bar me-2"></i>Estadísticas</a></li>
                    </ul>
                </li>

                <!-- Finanzas -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">
                        <i class="fas fa-wallet me-1"></i>Finanzas
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-page="/Account/Index"><i class="fas fa-piggy-bank me-2"></i>Cuentas</a></li>
                        <li><a class="dropdown-item" asp-page="/Budget/Index"><i class="fas fa-money-bill-wave me-2"></i>Presupuestos</a></li>
                        <li><a class="dropdown-item" asp-page="/Goals/Index"><i class="fas fa-bullseye me-2"></i>Metas</a></li>
                        <li><a class="dropdown-item" asp-page="/Currency/Index"><i class="fas fa-coins me-2"></i>Monedas</a></li>
                        <li><a class="dropdown-item" asp-page="/Categoria/Index"><i class="fas fa-tags me-2"></i>Categorías</a></li>
                    </ul>
                </li>

                <!-- Configuración -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">
                        <i class="fas fa-cog me-1"></i>Configuración
                    </a>
                    <ul class="dropdown-menu">
                        <li><h6 class="dropdown-header">Configuraciones Generales</h6></li>
                        <li><a class="dropdown-item" asp-page="/Configs/CategoriaPresupuesto/Index"><i class="fas fa-folder me-2"></i>Categorías Presupuesto</a></li>
                        <li><a class="dropdown-item" asp-page="/Configs/CategoriaTransaccion/Index"><i class="fas fa-exchange-alt me-2"></i>Categorías Transacción</a></li>
                        <li><a class="dropdown-item" asp-page="/Configs/EstadoObjetivo/Index"><i class="fas fa-flag me-2"></i>Estados Objetivo</a></li>
                        <li><a class="dropdown-item" asp-page="/Configs/EstadoRecordatorio/Index"><i class="fas fa-bell me-2"></i>Estados Recordatorio</a></li>
                        <li><a class="dropdown-item" asp-page="/Configs/Prioridad/Index"><i class="fas fa-star me-2"></i>Prioridades</a></li>
                        <li><div class="dropdown-divider"></div></li>
                        <li><h6 class="dropdown-header">Tipos</h6></li>
                        <li><a class="dropdown-item" asp-page="/Configs/TipoCategoria/Index"><i class="fas fa-list me-2"></i>Tipos Categoría</a></li>
                        <li><a class="dropdown-item" asp-page="/Configs/TipoCuenta/Index"><i class="fas fa-university me-2"></i>Tipos Cuenta</a></li>
                        <li><a class="dropdown-item" asp-page="/Configs/TipoRecordatorio/Index"><i class="fas fa-clock me-2"></i>Tipos Recordatorio</a></li>
                        <li><a class="dropdown-item" asp-page="/Configs/TipoTransaccion/Index"><i class="fas fa-exchange-alt me-2"></i>Tipos Transacción</a></li>
                    </ul>
                </li>
            </ul>

            <!-- Usuario -->
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">
                        <i class="fas fa-user me-1"></i>Usuario
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-page="/Usuario/Index"><i class="fas fa-users me-2"></i>Usuarios</a></li>
                        <li><a class="dropdown-item" asp-page="/Usuario/Configuration/Index"><i class="fas fa-cog me-2"></i>Configuración</a></li>
                        <li><a class="dropdown-item" asp-page="/Configs/RolUsuario/Index"><i class="fas fa-user-tag me-2"></i>Roles</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>
        <div class="offcanvas offcanvas-end" tabindex="-1" id="settingsOffcanvas"
            aria-labelledby="settingsOffcanvasLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="settingsOffcanvasLabel">Configuración</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-palette me-2"></i>
                                <span>Apariencia</span>
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </a>
                    <a asp-page="/Configs/Index" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-wrench me-2"></i>
                                <span>Configuración</span>
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main role="main" class="container flex-grow-1 py-4">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="~/lib/jquery/js/jquery3.7.1.js"></script>
    <script src="https://unpkg.com/@@popperjs/core@2/dist/umd/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- DataTables -->
    <script src="~/lib/DataTables/js/datatables.min.js"></script>
    <script src="~/lib/DataTables/lang/es.js"></script>

    <!-- Configuración global de DataTables -->
    <script>
        $(document).ready(function () {
            console.log('Iniciando configuración DataTables');
            console.log('Archivo de lenguaje cargado:', typeof dataTableSpanish !== 'undefined');

            if (typeof dataTableSpanish !== 'undefined') {
                $.extend(true, $.fn.dataTable.defaults, {
                    language: dataTableSpanish,
                    responsive: true,
                    pageLength: 10,
                    lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]]
                });
                console.log('Configuración DataTables aplicada');
            } else {
                console.error('No se encontró la configuración de idioma para DataTables');
            }
        });
    </script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>