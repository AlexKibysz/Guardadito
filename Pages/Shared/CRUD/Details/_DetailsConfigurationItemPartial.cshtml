@model Guardadito.Entity.Contracts.IConfigurationEntity
@{
    var entityDisplayName = ViewData["Title"]?.ToString() ?? "Registro";
    var icon = ViewData["Icon"]?.ToString() ?? "fas fa-info-circle me-2";
}

<div class="container-fluid px-4">
    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="@icon"></i> Detalles de @entityDisplayName
            </h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-tag me-2"></i>
                    @Html.DisplayNameFor(m => m.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(m => m.Name)
                </dd>

                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-calendar-plus me-2"></i>
                    @Html.DisplayNameFor(m => m.CreatedAt)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(m => m.CreatedAt)
                </dd>

                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-calendar-check me-2"></i>
                    @Html.DisplayNameFor(m => m.UpdatedAt)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(m => m.UpdatedAt)
                </dd>
            </dl>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
                <a asp-page="./Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>