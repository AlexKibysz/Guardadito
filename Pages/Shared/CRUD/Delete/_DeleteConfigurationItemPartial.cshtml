@model Guardadito.Entity.Contracts.IConfigurationEntity
@{
    var entityDisplayName = ViewData["Title"]?.ToString() ?? "Registro";
    var icon = ViewData["Icon"]?.ToString() ?? "fas fa-trash me-2";
}

<div class="container-fluid px-4">
    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title mb-0">
                <i class="@icon"></i> Eliminar @entityDisplayName
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning border-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                ¿Está seguro que desea eliminar este registro? Esta acción no se puede deshacer.
            </div>

            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(m => m.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(m => m.Name)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(m => m.CreatedAt)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(m => m.CreatedAt)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(m => m.UpdatedAt)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(m => m.UpdatedAt)
                </dd>
            </dl>

            <div class="d-flex justify-content-end gap-2">
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                    data-bs-target="#deleteConfirmModal">
                    <i class="fas fa-trash me-2"></i>Eliminar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está completamente seguro de eliminar <strong>@Model.Name</strong>?</p>
                <p class="mb-0 text-danger"><small>Esta acción no se puede deshacer.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancelar
                </button>
                <form method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Confirmar Eliminación
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>