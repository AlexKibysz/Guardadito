@page
@model EditModel

@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="container py-4">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Editar Categoría</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Categoria.Id" />
                    <input type="hidden" asp-for="Categoria.CreatedAt" />
                    <input type="hidden" asp-for="Categoria.UpdatedAt" />

                    <div class="mb-3">
                        <label asp-for="Categoria.Nombre" class="form-label">
                            <i class="fas fa-tag me-1"></i>Nombre<span class="text-danger">*</span>
                        </label>
                        <input asp-for="Categoria.Nombre" class="form-control" />
                        <span asp-validation-for="Categoria.Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Categoria.TipoCategoriaId" class="form-label">
                            <i class="fas fa-list-alt me-1"></i>Tipo<span class="text-danger">*</span>
                        </label>
                        <select asp-for="Categoria.TipoCategoriaId" class="form-select"
                            asp-items="ViewBag.TipoCategoriaId">
                            <option value="">Seleccione el tipo de categoría</option>
                        </select>
                        <span asp-validation-for="Categoria.TipoCategoriaId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Categoria.CategoriaPadreId" class="form-label">
                            <i class="fas fa-sitemap me-1"></i>Categoría Padre
                        </label>
                        <select asp-for="Categoria.CategoriaPadreId" class="form-select"
                            asp-items="ViewBag.CategoriaPadreId">
                            <option value="">Seleccione la categoría padre</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Categoria.Icono" class="form-label">
                            <i class="fas fa-icons me-1"></i>Ícono<span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i id="iconPreview" class="@Model.Categoria.Icono"></i>
                            </span>
                            <select asp-for="Categoria.Icono" class="form-select" id="iconSelect"
                                asp-items="ViewBag.Iconos">
                                <option value="">Seleccione un ícono</option>
                            </select>
                        </div>
                        <span asp-validation-for="Categoria.Icono" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Categoria.Color" class="form-label">
                            <i class="fas fa-palette me-1"></i>Color<span class="text-danger">*</span>
                        </label>
                        <input asp-for="Categoria.Color" type="color" class="form-control form-control-color w-100" />
                        <span asp-validation-for="Categoria.Color" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Categoria.Presupuesto" class="form-label">
                            <i class="fas fa-money-bill-wave me-1"></i>Presupuesto
                        </label>
                        <input asp-for="Categoria.Presupuesto" class="form-control" />
                        <span asp-validation-for="Categoria.Presupuesto" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Volver
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/categoria.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
