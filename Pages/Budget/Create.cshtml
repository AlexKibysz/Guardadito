@page
@model Guardadito.Pages.Budget.CreateModel

@{
    ViewData["Title"] = "Nuevo Presupuesto";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-money-bill-wave me-2"></i>Crear Nuevo Presupuesto
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Presupuesto.Nombre" class="form-label">
                                    <i class="fas fa-tag me-1"></i>Nombre
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Presupuesto.Nombre" class="form-control" placeholder="Ej: Presupuesto Mensual"/>
                                <span asp-validation-for="Presupuesto.Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Presupuesto.MontoTotal" class="form-label">
                                    <i class="fas fa-dollar-sign me-1"></i>Monto Total
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Presupuesto.MontoTotal" class="form-control" type="number" step="0.01"/>
                                </div>
                                <span asp-validation-for="Presupuesto.MontoTotal" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Presupuesto.FechaInicio" class="form-label">
                                    <i class="fas fa-calendar-alt me-1"></i>Fecha Inicio
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Presupuesto.FechaInicio" class="form-control" type="date"/>
                                <span asp-validation-for="Presupuesto.FechaInicio" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Presupuesto.FechaFin" class="form-label">
                                    <i class="fas fa-calendar-alt me-1"></i>Fecha Fin
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Presupuesto.FechaFin" class="form-control" type="date"/>
                                <span asp-validation-for="Presupuesto.FechaFin" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Presupuesto.UsuarioId" class="form-label">
                                <i class="fas fa-user me-1"></i>Usuario
                            </label>
                            <select asp-for="Presupuesto.UsuarioId" class="form-select" asp-items="ViewBag.UsuarioId">
                                <option value="">-- Seleccione un Usuario --</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Guardar Presupuesto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Inicializar validaciones de formulario
        $(document).ready(function() {
            $('form').validate({
                errorElement: 'span',
                errorClass: 'text-danger'
            });
        });
    </script>
}
