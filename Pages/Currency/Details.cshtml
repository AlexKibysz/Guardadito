@page "{id:guid}"
@model Guardadito.Pages.Currency.Details

@{
   ViewData["Title"] = "Detalles de Moneda";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">
                <i class="fas fa-info-circle me-2"></i>Detalles de Moneda
            </h3>
        </div>

        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-4">Información General</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Código:</dt>
                        <dd class="col-sm-8">@Model.Currency.Code</dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">@Model.Currency.Name</dd>

                        <dt class="col-sm-4">Símbolo:</dt>
                        <dd class="col-sm-8">@Model.Currency.Symbol</dd>

                        <dt class="col-sm-4">Tipo de Cambio:</dt>
                        <dd class="col-sm-8">@Model.Currency.ExchangeRate.ToString("N6")</dd>

                        <dt class="col-sm-4">Fecha de Tasa:</dt>
                        <dd class="col-sm-8">@Model.Currency.RateDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Currency.IsActive ? "success" : "danger")">
                                @(Model.Currency.IsActive ? "Activo" : "Inactivo")
                            </span>
                        </dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5 class="mb-4">Información de Auditoría</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Creado:</dt>
                        <dd class="col-sm-8">@Model.Currency.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                        <dt class="col-sm-4">Actualizado:</dt>
                        <dd class="col-sm-8">@Model.Currency.UpdatedAt.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a href="/Currency" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
                <a href="/Currency/Edit/@Model.Currency.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div> 