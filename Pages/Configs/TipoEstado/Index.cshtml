@page
@model Guardadito.Pages.Config.TipoEstado.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex align-items-center mb-4">
    <a href="/Configs" class="btn btn-secondary me-2">
        <i class="bi bi-arrow-left"></i>
    </a>
    <h1 class="display-4 mb-0">Categorías de Transacción</h1>
</div>
<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StatType[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatType[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatType[0].UpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StatType)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
