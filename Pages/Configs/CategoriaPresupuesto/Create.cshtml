@page
@model Guardadito.Pages.CategoriaPresupuesto.CreateModel
@{
    ViewData["Title"] = "Nueva Categor√≠a de Presupuesto";
    ViewData["Icon"] = "fas fa-money-bill-wave me-2";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="@ViewData["Icon"]"></i>
                        @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="CategoriaPresupuesto.Nombre" class="form-label">
                                <i class="fas fa-tag me-1"></i>
                                Nombre
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="CategoriaPresupuesto.Nombre" class="form-control"/>
                            <span asp-validation-for="CategoriaPresupuesto.Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoriaPresupuesto.MontoAsignado" class="form-label">
                                <i class="fas fa-dollar-sign me-1"></i>
                                Monto Asignado
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="CategoriaPresupuesto.MontoAsignado" class="form-control"/>
                            <span asp-validation-for="CategoriaPresupuesto.MontoAsignado" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoriaPresupuesto.MontoGastado" class="form-label">
                                <i class="fas fa-chart-pie me-1"></i>
                                Monto Gastado
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="CategoriaPresupuesto.MontoGastado" class="form-control"/>
                            <span asp-validation-for="CategoriaPresupuesto.MontoGastado" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}